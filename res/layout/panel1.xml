<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	>

 	<ImageButton android:id="@+id/LFO1"
	   android:src="@drawable/lfo1"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:background="@null" 
	   android:adjustViewBounds="true"
	   android:layout_marginTop="10dp"
	   android:layout_marginLeft="10dp">
	</ImageButton>
	<ImageButton android:id="@+id/LFO2"
	   android:src="@drawable/lfo2"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_below="@+id/LFO1"
	   android:background="@null" 
	   android:adjustViewBounds="true"
	   android:layout_marginLeft="10dp">  			   	
	</ImageButton>
 <SeekBar 
	 	android:id="@+id/LFO1Bar" 
	 	android:layout_width="120px" 
	 	android:layout_marginTop="26dp"
	 	android:layout_marginLeft="25dp"
	 	android:layout_height="wrap_content"
	 	android:layout_toRightOf="@+id/LFO1">
	 </SeekBar>
	 <SeekBar 
	 	android:id="@+id/LFO2Bar" 
	 	android:layout_width="120px"
	 	android:layout_marginTop="10dp"
	 	android:layout_marginLeft="25dp" 
	 	android:layout_height="wrap_content"
	 	android:layout_below="@+id/LFO1Bar"
	 	android:layout_toRightOf="@+id/LFO2">
	 </SeekBar>
</RelativeLayout>