<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/LinearLayout01"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
 	<ToggleButton android:id="@+id/LFO1"
	   android:background="@drawable/lfo1b" 
	   android:textOn="" android:textOff=""
	   android:adjustViewBounds="true" 
       android:layout_height="55px"
       android:layout_width="55px">
	</ToggleButton>
	<ToggleButton android:id="@+id/LFO2"
	   android:background="@drawable/lfo2b"
	   android:layout_width="55px"
	   android:layout_height="55px"
	   android:layout_below="@+id/LFO1"
	   android:adjustViewBounds="true"
	   android:layout_marginTop="7dp"
	   android:textOn="" android:textOff="">  			   	
	</ToggleButton>
    <SeekBar 
	 	android:id="@+id/LFO1Bar" 
	 	android:layout_width="150px" 
	 	android:layout_height="wrap_content"
	 	android:layout_marginLeft="20dp" 
	 	android:layout_marginTop="12dp"
	 	android:max="90"
	 	android:layout_toRightOf="@+id/LFO1">
	 </SeekBar>
	 <SeekBar 
	 	android:id="@+id/LFO2Bar" 
	 	android:layout_width="150px"
	 	android:layout_marginTop="30dp"
	 	android:layout_marginLeft="20dp"
	 	android:layout_height="wrap_content"
	 	android:layout_below="@+id/LFO1Bar"
	 	android:layout_toRightOf="@+id/LFO2"
	 	android:max="90">
	 </SeekBar>
</RelativeLayout>